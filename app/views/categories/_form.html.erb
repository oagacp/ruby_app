<div class="container">
  <%= render "shared/errors", obj: @category %>
  <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded") do |form| %>
    <div class="row justify-content-center">
      <div class="col-10">
          <div class="form-group row mb-3">
            <%= form.label :name, "Category name", class: "col-2 col-form-label text-white"  %>
            <div class="col-10">
              <%= form.text_field :name, class:"form-control shadow rounded", placeholder: "Name of the category" %>
            </div>
          </div>

        <div class="form-group text-center mt-4">
          <%= form.submit class:"btn btn-outline-light btn-lg" %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="text-center mt-2">
    <%= link_to "[ Back to Category List ]", categories_path %>
  </div>
</div>

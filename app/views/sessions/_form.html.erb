<div class="container">
  <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info rounded") do |form| %>
    <div class="row justify-content-center">
      <div class="col-10">
        <div class="form-group row mb-3">
          <%= form.label :email, class: "col-2 col-form-label text-white"  %>
          <div class="col-10">
            <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :password, class: "col-2 col-form-label text-white"  %>
          <div class="col-10">
            <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
          </div>
        </div>
        <div class="form-group text-center mt-4">
          <%= form.submit "Log in", class:"btn btn-outline-light btn-lg" %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="text-center mt-2">
    <%= link_to "[ Back to Articles List ]", articles_path %>
  </div>
</div>

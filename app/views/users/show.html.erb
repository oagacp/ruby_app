<h2 class="text-center mt-4">Profile information of <%= @user.username %> account</h2>
<div class="row justify-content-md-center">
  <div class="col-8 mt-4">
    <div class="card shadow p-3 mb-4 big-white rounded">
      <div class="card-header text-center">
        <%= @user.fname + " " + @user.lname if @user %> account
      </div>
      <div class="card-body">
        <div class="card-text text-left"><%= simple_format(@user.username) %></div>
        <div class="card-text text-left"><%= simple_format(@user.fname) %></div>
        <div class="card-text text-left"><%= simple_format(@user.lname) %></div>
        <div class="card-text text-left"><%= simple_format(@user.email) %></div>
        <div class="text-center">
          <%= link_to "Edit", edit_user_path(@user), class:"btn btn-outline-primary" %>
          <%= link_to "Delete", @user, method: :delete, class:"btn btn-outline-danger" %>
        </div>
      </div>
      <div class="card-footer text-muted text-center">
        <small> Created <%= time_ago_in_words(@user.created_at) %>, Edited <%= time_ago_in_words(@user.updated_at) %></small>
      </div>
    </div>
  </div>

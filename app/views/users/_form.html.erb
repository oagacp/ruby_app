<div class="container">
  <%= render "shared/errors", obj: @user %>
  <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded") do |form| %>
    <div class="row justify-content-center">
      <div class="col-10">
          <div class="form-group row mb-3">
            <%= form.label :username, class: "col-2 col-form-label text-white"  %>
            <div class="col-10">
              <%= form.text_field :username, class:"form-control shadow rounded", placeholder: "Enter a username" %>
            </div>
          </div>
        <div class="form-group row mb-3">
          <%= form.label :fname, class: "col-2 col-form-label text-white"  %>
          <div class="col-10">
            <%= form.text_field :fname, class: "form-control shadow rounded", placeholder: "Enter your first name" %>
          </div>
        </div>
        <div class="form-group row mb-3">
          <%= form.label :lname, class: "col-2 col-form-label text-white"  %>
          <div class="col-10">
            <%= form.text_field :lname, class: "form-control shadow rounded", placeholder: "Enter your last name" %>
          </div>
        </div>
        <div class="form-group row mb-3">
          <%= form.label :email, class: "col-2 col-form-label text-white"  %>
          <div class="col-10">
            <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email" %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :password, class: "col-2 col-form-label text-white"  %>
          <div class="col-10">
            <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Enter a password" %>
          </div>
        </div>
        <div class="form-group text-center mt-4">
          <%= form.submit class:"btn btn-outline-light btn-lg" %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="text-center mt-2">
    <%= link_to "[ Back to Articles List ]", articles_path %>
  </div>
</div>

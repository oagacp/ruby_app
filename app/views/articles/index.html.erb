<h1 class="text-center mt-4">Articles List</h1>
<div class="container">
  <% @articles.each do |article| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow p-3 mb-4 big-white rounded">
          <div class="card-header">
            By <%= article.user.fname + " " + article.user.lname if article.user %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article_path(article) %></h5>
            <p class="card-text"><%= truncate(article.description, length: 100) %></p>
            <%= link_to "View", article, class:"btn btn-outline-success" %>
            <%= link_to "Edit", edit_article_path(article), class:"btn btn-outline-primary" %>
            <%= link_to "Delete", article, method: :delete, class:"btn btn-outline-danger" %>
          </div>
          <div class="card-footer text-muted">
            <small> Created <%= time_ago_in_words(article.created_at) %>, Edited <%= time_ago_in_words(article.updated_at) %>    </small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<p style="color: green"><%= notice %></p>

<h1>Articles</h1>

<div id="articles">
  <table>
    <thead>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <% @article = article %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.description %></td>
          <td><%= link_to "Show", article %></td>
          <td><%= button_to "Delete", article, method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<p></p>

<%= link_to "New article", new_article_path %>

<div class="container">
  <%= render "shared/errors", obj: article %>
  <%= form_with(model: article, class: "shadow p-3 mb-3 bg-info rounded") do |form| %>
    <div class="row justify-content-center">
      <div class="col-10">
          <div class="form-group row mb-3">
            <%= form.label :title, class: "col-2 col-form-label text-white"  %>
            <div class="col-10">
              <%= form.text_field :title, class:"form-control shadow rounded", placeholder: "Title of the article" %>
            </div>
          </div>


        <div class="form-group row">
          <%= form.label :description, class: "col-2 col-form-label text-white"  %>
          <div class="col-10">
            <%= form.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of the article" %>
          </div>
        </div>
        <div class="form-group text-center mt-4">
          <%= form.submit class:"btn btn-outline-light btn-lg" %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="text-center mt-2">
    <%= link_to "[ Back to Articles List ]", articles_path %>
  </div>
</div>
